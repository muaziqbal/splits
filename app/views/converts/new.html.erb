<% title "convert" %>
<% content_for(:header) do %>
  <h2>convert splits to other cool formats</h2>
<% end %>
<article>
  <form id="convert" action="/api/v4/convert" method="post" enctype="multipart/form-data">
    <div class="form-group col-sm-4">
      <input type="file" name="file" />
    </div>
    <div class="form-group col-sm-2">
      <select name="program">
        <% Run.programs.each do |prgrm| %>
          <% unless prgrm.to_s.downcase == "llanfair" %>
            <option value="<%= prgrm.to_s.downcase %>"><%= prgrm.to_s %></option>
          <% end %>
        <% end %>
        <option value="splits_io">Splits-io</option>
      </select>
    </div>
    <div class="form-group col-sm-2">
      <input type="checkbox" name="include_history" id="include_history" />
      <label for="include_history">Incldue History?</label>
    </div>
    <div class="form-group col-sm-2">
      <input type="submit" value="convert" />
    </div>
  </form>
</article>
