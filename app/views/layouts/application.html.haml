!!!
%html
  %head
    %title splits.io
    = stylesheet_link_tag    "application", media: :all
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{href: "http://yui.yahooapis.com/pure/0.3.0/pure-min.css", rel: :stylesheet}/
    %link{href: "http://purecss.io/css/layouts/side-menu.css", rel: :stylesheet}/
    = csrf_meta_tag
  %body
    #dropzone
      #progressbar
      .notice
        = notice
      .alert
        = alert
      #dropzone-overlay.header{style: "border: none;"}
        %h1#droplabel.inverted drop anywhere
        #file-list.inverted
      %a{href: root_path}
        #logo
          splits.io
      = yield
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "/assets/pure-ui-1.7.7.js"}
    %script{src: "/assets/upload.js"}
