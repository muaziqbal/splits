!!!
%html
  %head
    %title splits.io
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag "application", media: :all
    = csrf_meta_tag
  %body
    #dropzone
      #dropzone-overlay.header{style: "border: none;"}
        %h1#droplabel.inverted drop anywhere
        #file-list.inverted
      %a{href: root_path}
        #logo
          splits.io
      - if alert.present?
        #alert= alert
      - elsif notice.present?
        #notice= notice
      - elsif @random.present?
        #random
          %a.pure-button{href: random_path, style: "font-size: 70%; border-radius: 0 0 2px 2px;"}
            Another random?
      .account
      = yield
      %footer#footer
        #footer-links
          - if user_signed_in?
            signed in as #{current_user.name}
            &bull;
            %a{href: logout_path} sign out
          - else
            %a.fake-link#signin-link{onclick: 'toggle_signin_menu()'} sign in
          %br
          - if @run.present?
            %a.fake-link#download-link{onclick: "toggle_download_menu()"} download
            &bull;
          %a{href: upload_path} upload
          &bull;
          %a{href: "mailto:qhiiyr@gmail.com"} feedback
          &bull;
          %a{href: "https://github.com/glacials/splits.io", target: :_blank} github
        - if @run.present?
          #download-menu
            %a{href: download_path(@run.nick, :wsplit), onclick: "hide_download_menu()"} WSplit
            &bull;
            %a{href: download_path(@run.nick, :timesplittracker), onclick: "hide_download_menu()"} Time Split Tracker
            &bull;
            %a{href: download_path(@run.nick, :splitterz), onclick: "hide_download_menu()"} SplitterZ
            &bull;
            %a{href: download_path(@run.nick, :livesplit), onclick: "hide_download_menu()"} LiveSplit
        %a{href: twitch_out_path}
          #signin-menu
            Sign in with
            %img{src: 'http://s.jtvnw.net/jtv_user_pictures/hosted_images/Twitch_Logo_White.png', style: 'vertical-align: middle; margin: 5px; height: 25px;'}
  = javascript_include_tag "application"
  - if Rails.env.production?
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-2876079-8', 'splits.io');
      ga('send', 'pageview');
