!!!
%html
  %head
    %title splits.io
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag "application", media: :all
    = csrf_meta_tag
  %body
    #dropzone
      #dropzone-overlay.header{style: "border: none;"}
        %h1#droplabel.inverted drop anywhere
        #file-list.inverted
      %a{href: root_path}
        #logo
          splits.io
      - if alert
        .alert
          = alert
      - elsif notice
        .notice
          = notice
      - elsif @random
        #random
          %a.pure-button{href: random_path, style: "font-size: 70%; border-radius: 0 0 2px 2px;"}
            Another random?
      = yield
      %footer#footer
        %a{href: upload_path} upload
        &bull;
        - if @run.present?
          %a.fake-link{onclick: "show_download_menu()"} download
          &bull;
        %a{href: "mailto:qhiiyr@gmail.com"} feedback
        &bull;
        %a{href: "https://github.com/glacials/splits.io", target: :_blank} github
      - if @run.present?
        %footer#download-menu
          %div{style: "text-align: left;"}
            What format?
          %a{href: download_path(@run.nick, :wsplit), onclick: "hide_download_menu()"} WSplit
          &bull;
          %a{href: download_path(@run.nick, :timesplittracker), onclick: "hide_download_menu()"} Time Split Tracker
          &bull;
          %a{href: download_path(@run.nick, :splitterz), onclick: "hide_download_menu()"} SplitterZ
          &bull;
          %a{href: download_path(@run.nick, :livesplit), onclick: "hide_download_menu()"} LiveSplit
  = javascript_include_tag "application"
  - if Rails.env.production?
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-2876079-8', 'splits.io');
      ga('send', 'pageview');
