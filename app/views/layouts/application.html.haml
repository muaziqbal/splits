!!!
%html
  %head
    %title splits.io
    = stylesheet_link_tag    "application", media: :all
    = javascript_include_tag "application"
    = csrf_meta_tag
    %link{href: "http://yui.yahooapis.com/pure/0.3.0/pure-min.css", rel: :stylesheet}/
    %link{href: "/assets/pure-side-menu.css", rel: :stylesheet}/
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet", type: "text/css"}/
  %body
    #dropzone
      .notice
        = notice
      .alert
        = alert
      #dropzone-overlay.header{style: "border: none;"}
        %h1#droplabel.inverted drop anywhere
        #file-list.inverted
      %a{href: root_path}
        #logo
          splits.io
      - if @random
        #random
          %a.pure-button.pure-button{href: random_path, style: "font-size: 70%; border-radius: 0 0 2px 2px;"}
            Another random?
      = yield
      %footer{style: "position: absolute; right: 10px; bottom: 10px;"}
        - if @run_record.present?
          %a{href: upload_path} upload
          &bull;
          %a{href: download_run_path(@run_record.nick)} download
          &bull;
        %a{href: "mailto:qhiiyr@gmail.com"} feedback
        &bull;
        %a{href: "https://github.com/skoh-fley/splits.io", target: :_blank} github
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "/assets/upload.js"}
  - if Rails.env.production?
    :javascript
