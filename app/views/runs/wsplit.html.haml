#main
  .header
    - if @run_record.hits < 2
      .permalink-indicator
        &uarr; That's your permalink!
    %h2 #{@run.title}
  - run_time = @run.splits_lines.splits_line.last.run_time.to_s.to_f
  - colors = [:blue, :purple, :green, :red, :orange, :yellow]
  - c = 0
  .size-chart.l-vbox.pure-g{style: "margin-bottom: 30px;"}
    - @run.splits_lines.splits_line.each do |s|
      .size-chart-item.pure-u{class: "size-chart-" + colors[c].to_s, style: "width: #{s.split_time.to_s.to_f/run_time*100}%;"}
        .size-chart-label{href: "/base/", style: "white-space: nowrap;"}
          = s.split_title
          %span.size-chart-size
            = Time.at(s.split_time.to_s.to_f).utc.strftime("%H:%M:%S")
      - c = (c + 1) % colors.length
  .content
    %table.pure-table{style: "margin: auto;"}
      %thead
        %tr
          %th #
          %th Title
          %th Duration
          %th Finished at
      %tbody
        - i = 0
        - @run.splits_lines.splits_line.each do |s|
          %tr
            %td.align-right
              = i +=1
            %td
              = s.split_title
            %td.align-right
              = Time.at(s.split_time.to_s.to_f).utc.strftime("%H:%M:%S")
            %td.align-right
              = Time.at(s.run_time.to_s.to_f).utc.strftime("%H:%M:%S")
    .run-footer
      %a{href: download_run_path(@run_record.nick)}
        download
