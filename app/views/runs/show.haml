= render partial: 'twitter_card'

.header{style: 'border: none;'}
  - if @run.is_new
    #permalink-indicator
      &uarr; That's your permalink!
.container
  %h2
    #{@run.name}
  %h5= render partial: 'shared/time', locals: {run: @run, time: @run.time}
  - if @run.user.present?
    %h6
      %a.twitch{href: "http://twitch.tv/#{@run.user.name}", target: :_blank}= "twitch.tv/#{@run.user.name}"
- colors = [:blue, :purple, :green, :red, :orange, :yellow]
- c = 0
- percentage = 0
- i = 1
.timeline.l-vbox.pure-g{style: "margin-bottom: 1em;"}
  - percentage = @run.splits.sum(&:duration) / @run.time
  - @run.splits.each do |split|
    - unless split.duration == 0
      .pure-u.split{id: 'split-' + i.to_s, class: "size-chart-" + colors[c].to_s, style: "width: #{split.duration / @run.time * 100}%;"}
        .title= split.name
        .time= render partial: 'shared/time', locals: {run: @run, time: split.duration}
      - c = (c + 1) % colors.length
    - i += 1
- i = 1
- percentage_so_far = 0
.timeline.l-vbox.pure-g{style: "margin-bottom: 1em;"}
  - @run.splits.each do |split|
    - unless split.duration == 0
      .pure-u.inspect{id: 'inspect-' + i.to_s, style: "width: #{split.duration / @run.time * 100}%; opacity: 0;"}
        .bar
          %p
        .title= split.name
        .time= render partial: 'shared/time', locals: {run: @run, time: split.duration}
    - i += 1
    - percentage_so_far += split.duration/@run.time + (1 - percentage/100)/@run.splits.length
.container
  %table
    %thead
      %tr
        %th.align-right #
        %th Name
        %th.align-right Duration
        %th.align-right Finished at
    %tbody
      - i = 0
      - @run.splits.each do |split|
        %tr
          %td.align-right
            = i +=1
          %td
            = split.name
          %td.align-right
            - unless split.duration == 0
              = render partial: 'shared/time', locals: {run: @run, time: split.duration}
            - else
              \-
          %td.align-right
            - unless split.duration == 0
              = render partial: 'shared/time', locals: {run: @run, time: split.finish_time}
            - else
              \-
- if @run.is_new
  :coffee
    window.onload = -> $('#permalink-indicator').fadeIn().delay(4000).fadeOut();
