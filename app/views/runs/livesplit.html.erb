<?xml version="1.0" encoding="UTF-8"?>
<Run>
  <GameIcon />
  <GameName>
  </GameName>
  <CategoryName><%= @run.name %></CategoryName>
  <Offset><%= Time.at(@run.offset || 0).utc.strftime("%H:%M:%S").strip %></Offset>
  <AttemptCount><%= @run.attempts || 0 %></AttemptCount>
  <RunHistory />
  <Segments>
  <% @run.splits.each do |split| %>
    <Segment>
      <Icon />
      <Name><%= split[:name] %></Name>
      <PersonalBestSplitTime><%= Time.at(split[:finish_time] || 0).utc.strftime("%H:%M:%S.%7N").strip %></PersonalBestSplitTime>
      <BestSegmentTime><%= Time.at(split[:best][:duration] || 0).utc.strftime("%H:%M:%S.%7N").strip %></BestSegmentTime>
      <SegmentHistory />
    </Segment>
  <% end %>
  </Segments>
</Run>
